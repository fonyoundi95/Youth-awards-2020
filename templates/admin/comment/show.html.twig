{% extends 'admin/base.html.twig' %}


{% block title %}
  Comment
{% endblock %}

{% block body %}
  <h1 class="mt-5">
    Comment
  </h1>

  <table class="table">
    <tbody>
      <tr>
        <th>
          Id
        </th>
        <td>
          {{ comment.id }}
        </td>
      </tr>
      <tr>
        <th>
          Content
        </th>
        <td class ="pl-3 pr-3 text-break">
          {{ comment.content }}
        </td>
      </tr>
      <tr>
        <th>
          CreateAd
        </th>
        <td>
          {{ comment.createAd ? comment.createAd|date('Y-m-d H:i:s') : '' }}
        </td>
      </tr>
    </tbody>
  </table>

  <a class="btn btn-info" href="{{ path('comment_index') }}">back to list</a>

  <a class="btn btn-success"
    href="{{
    path(
      'comment_edit',
      {
        id: comment.id
      }
    )
    }}">
    edit
  </a>

{{ include('admin/comment/_delete_form.html.twig') }}

{% endblock %}
