{% extends 'admin/base.html.twig' %}


{% block title %}
	Comment index
{% endblock %}

{% block body %}
	<h1 class="mt-5">
		Comment index
	</h1>

	<table class="table">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th >
					Content
				</th>
				<th>
					CreateAd
				</th>
				<th>
					actions
				</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>
						{{ comment.id }}
					</td>
					<td class ="pl-3 pr-3 text-break">
						{{ comment.content }}
					</td>
					<td>
						{{ comment.createAd ? comment.createAd|date('Y-m-d H:i:s') : '' }}
					</td>
					<td>
						<a class="btn btn-info my-1" href="{{ path( 'comment_show', { id: comment.id } ) }}">
							show
						</a>
						<a class="btn btn-success" href="{{ path( 'comment_edit', { id: comment.id } ) }}">
								EDIT
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">
						no records found
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-success" href="{{ path('comment_new') }}">Create new</a>
{% endblock %}

