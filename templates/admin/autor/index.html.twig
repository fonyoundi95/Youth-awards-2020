{% extends 'admin/base.html.twig' %}


{% block title %}
	Autor index
{% endblock %}

{% block body %}
	<h1 class="mt-5">
		Autor index
	</h1>

	<table class="table">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Name
				</th>
				<th>
					Email
				</th>
				<th>
					Passeword
				</th>
				<th>
					actions
				</th>
			</tr>
		</thead>
		<tbody>
			{% for autor in autors %}
				<tr>
					<td>
						{{ autor.id }}
					</td>
					<td>
						{{ autor.name }}
					</td>
					<td>
						{{ autor.email }}
					</td>
					<td>
						{{ autor.passeword }}
					</td>
					<td>
						<a class="btn btn-info" href="{{ path( 'autor_show', { id: autor.id } ) }}">
							show
						</a>

						<a class="btn btn-success" href="{{ path( 'autor_edit', { id: autor.id } ) }}">
							edit
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">
						no records found
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-success" href="{{ path('autor_new') }}">Create new</a>
{% endblock %}
