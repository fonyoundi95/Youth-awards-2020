{% extends 'base.html.twig' %}

{% block title %}Connexion!
{% endblock %}
{% block body %}

<div class="section section-breadcrumbs">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>Page de connexion au site !</h1>
			</div>
		</div>
	</div>
</div>
<hr>

	<div class="container">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-3 px-3 mt-5">

					<h1>Connectez vous!</h1>

					{% if hasError %}
						<div class="alert alert-danger">
							Une erreur est survenue, Votre
							<strong>
								adresse mail
							</strong>ou votre
							<strong>mot de passe</strong>
							n'est pas valide !</div>
					{% endif %}
					<form action="{{path('acount_login')}}" method="post">
						<div class="form-group">
							<label for="email">Email</label>
							<input type="text" name="_username" id="email" class="form-control" placeholder="Votre Adresse email..." requered value="{{username}}">
						</div>
						<div class="form-group">
							<label for="password">
								Mot de passe</label>
							<input type="password" name="_password" id="password" placeholder="Mot de passe... " class="form-control" requered></input>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-success">
							Connexion!
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}

