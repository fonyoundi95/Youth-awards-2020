
{% extends "base.html.twig" %}
{% block title %}Nos Awards
{% endblock %}

{% block body %}
<div class="section section-breadcrumbs">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>Nos Cathegories des Awards</h1>
			</div>
		</div>
	</div>
</div>

<div class="section section-white">
    <div class="container">
        <div class="row">

            <div class="section-title">
                <h1>Les Nomines aux Awards</h1>
            </div>
            <ul class="grid cs-style-3">
              		{% for award in awards %}	
					<div class="col-md-4 col-sm-6">
						<figure>
							<img src="/basica/img/portfolio/6.jpg" alt="img06">
							<figcaption>
								<h3>{{award.title}}</h3>
								<span>{{award.conten}}</span>
								<a href="{{path('voir_award',{ id: award.id })}}">Take a look</a>
							</figcaption>
						</figure>
					</div>
					{% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}